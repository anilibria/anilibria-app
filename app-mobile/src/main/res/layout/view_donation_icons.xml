<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icDonationalerts"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:background="?bgDonationIconDa"
        android:padding="6dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@id/icYoomoney"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_donationalerts"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/icYoomoney"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:background="?bgDonationIconYm"
        android:padding="6dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@id/icPatreon"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_yoomoney"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/icPatreon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:background="?bgDonationIconPt"
        android:padding="6dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@id/icBoosty"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_patreon"
        app:tint="@color/white" />


    <ImageView
        android:id="@+id/icBoosty"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="?bgDonationIconBt"
        android:padding="6dp"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_boosty"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>