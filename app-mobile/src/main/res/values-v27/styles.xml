<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DayNightAppTheme.NoActionBar" parent="DayNightAppTheme.NoActionBarBase">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:navigationBarColor">@color/light_cardBackground</item>
        <item name="android:navigationBarDividerColor">#0000</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="PreferencesDayNightAppTheme" parent="BasePreferencesDayNightAppTheme">
        <item name="android:navigationBarColor">@color/light_cardBackground</item>
        <item name="android:navigationBarDividerColor">#1000</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>
