<resources>


    <style name="BasePlayerTheme" parent="DarkAppTheme.NoActionBar">
        <!--<item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorControlNormal">@color/white</item>-->
        <item name="android:windowBackground">@color/dark_windowBackground</item>
    </style>

    <style name="PlayerTheme" parent="BasePlayerTheme" />

    <!-- Base application theme. -->
    <style name="LightAppTheme" parent="Theme.MaterialComponents.Light">

        <item name="colorPrimary">@color/light_colorAccent</item>
        <item name="colorSecondary">@color/light_colorAccent</item>
        <item name="colorSecondaryVariant">@color/light_colorAccent</item>
        <item name="android:colorBackground">@color/light_windowBackground</item>
        <item name="colorSurface">@color/light_cardBackground</item>
        <item name="colorOnPrimary">@color/light_contrast_icon</item>
        <item name="colorOnSecondary">@color/light_contrast_icon</item>
        <item name="colorOnBackground">@color/light_base_icon</item>
        <item name="colorOnSurface">@color/light_base_icon</item>

        <item name="actionModeBackground">@color/light_colorPrimary</item>
        <item name="actionModeCloseButtonStyle">@style/actionModeCloseButtonStyle</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="alertDialogTheme">@style/LightAppTheme.Dialog</item>
        <item name="android:windowBackground">@color/light_windowBackground</item>

        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:textColorLink">@color/light_textLink</item>

        <item name="bottomSheetDialogTheme">@style/Theme.Design.Light.BottomSheetDialog</item>

        <!-- Attrs -->
        <item name="divider_line">@color/light_divider_line</item>
        <item name="btn_border">@color/light_btn_border</item>
        <item name="gradientBackground">@drawable/bg_google_pay_gradient_light</item>
        <item name="imageBackground">@color/light_imageBackground</item>

        <item name="episode_even">@color/light_episode_even</item>
        <item name="bg_fav_btn">@drawable/bg_btn_favorite_light</item>
        <item name="bg_release_remind">@drawable/bg_release_remind_light</item>
        <item name="bg_schedule_day">@drawable/bg_schedule_day_light</item>

        <item name="textDefault">@color/light_textDefault</item>
        <item name="textSecond">@color/light_textSecond</item>

        <item name="playerColorPrimary">@color/playerColorPrimary</item>

        <item name="app_bar_overlay">@style/LightAppTheme.AppBarOverlay</item>
        <item name="popup_overlay">@style/LightAppTheme.PopupOverlay</item>
    </style>


    <style name="LightAppTheme.NoActionBarBase" parent="LightAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightAppTheme.NoActionBar" parent="LightAppTheme.NoActionBarBase" />

    <style name="BasePreferencesLightAppTheme" parent="LightAppTheme">
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryDark">@color/light_colorPrimaryDark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="PreferencesLightAppTheme" parent="BasePreferencesLightAppTheme" />

    <style name="Splash.LightAppTheme" parent="LightAppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>


    <style name="LightAppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents">
        <item name="android:singleLine">true</item>
        <item name="colorPrimary">?colorSurface</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="LightAppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents">
        <item name="elevation">0dp</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="LightAppTheme.Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/light_colorAccent</item>
        <item name="colorSecondary">@color/light_colorAccent</item>
        <item name="colorSecondaryVariant">@color/light_colorAccent</item>
        <item name="android:colorBackground">@color/light_cardBackground</item>
        <item name="colorSurface">@color/light_cardBackground</item>
        <item name="colorOnPrimary">@color/light_contrast_icon</item>
        <item name="colorOnSecondary">@color/light_contrast_icon</item>
        <item name="colorOnBackground">@color/light_base_icon</item>
        <item name="colorOnSurface">@color/light_base_icon</item>
    </style>


    <!-- Base application theme. -->
    <style name="DarkAppTheme" parent="Theme.MaterialComponents">

        <item name="colorPrimary">@color/dark_colorAccent</item>
        <item name="colorSecondary">@color/dark_colorAccent</item>
        <item name="colorSecondaryVariant">@color/dark_contrast_icon</item>
        <item name="android:colorBackground">@color/dark_windowBackground</item>
        <item name="colorSurface">@color/dark_cardBackground</item>
        <item name="colorOnPrimary">@color/dark_contrast_icon</item>
        <item name="colorOnSecondary">@color/dark_contrast_icon</item>
        <item name="colorOnBackground">@color/dark_base_icon</item>
        <item name="colorOnSurface">@color/dark_base_icon</item>

        <item name="actionModeBackground">@color/dark_colorPrimary</item>
        <item name="actionModeCloseButtonStyle">@style/actionModeCloseButtonStyle</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="alertDialogTheme">@style/DarkAppTheme.Dialog</item>
        <item name="android:windowBackground">@color/dark_windowBackground</item>

        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:textColorPrimary">@color/dark_textDefault</item>
        <item name="android:textColorPrimaryInverse">@color/dark_textDefault</item>
        <item name="android:textColorLink">@color/dark_textLink</item>

        <item name="bottomSheetDialogTheme">@style/Theme.Design.BottomSheetDialog</item>


        <!-- Attrs -->
        <item name="divider_line">@color/dark_divider_line</item>
        <item name="btn_border">@color/dark_btn_border</item>
        <item name="gradientBackground">@drawable/bg_google_pay_gradient_dark</item>
        <item name="imageBackground">@color/dark_imageBackground</item>

        <item name="episode_even">@color/dark_episode_even</item>
        <item name="bg_fav_btn">@drawable/bg_btn_favorite_dark</item>
        <item name="bg_release_remind">@drawable/bg_release_remind_dark</item>
        <item name="bg_schedule_day">@drawable/bg_schedule_day_dark</item>

        <item name="textDefault">@color/dark_textDefault</item>
        <item name="textSecond">@color/dark_textSecond</item>

        <item name="playerColorPrimary">@color/playerColorPrimary</item>

        <item name="app_bar_overlay">@style/DarkAppTheme.AppBarOverlay</item>
        <item name="popup_overlay">@style/DarkAppTheme.PopupOverlay</item>
    </style>


    <style name="DarkAppTheme.NoActionBarBase" parent="DarkAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkAppTheme.NoActionBar" parent="DarkAppTheme.NoActionBarBase" />

    <style name="BasePreferencesDarkAppTheme" parent="DarkAppTheme">
        <item name="colorPrimary">@color/dark_colorPrimary</item>
        <item name="colorPrimaryDark">@color/dark_colorPrimaryDark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="PreferencesDarkAppTheme" parent="BasePreferencesDarkAppTheme" />

    <style name="DarkAppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents">
        <item name="android:singleLine">true</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="DarkAppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents">
        <item name="elevation">0dp</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="DarkAppTheme.Dialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/dark_colorAccent</item>
        <item name="colorSecondary">@color/dark_colorAccent</item>
        <item name="colorSecondaryVariant">@color/dark_contrast_icon</item>
        <item name="android:colorBackground">@color/dark_cardBackground</item>
        <item name="colorSurface">@color/dark_cardBackground</item>
        <item name="colorOnPrimary">@color/dark_contrast_icon</item>
        <item name="colorOnSecondary">@color/dark_contrast_icon</item>
        <item name="colorOnBackground">@color/dark_base_icon</item>
        <item name="colorOnSurface">@color/dark_base_icon</item>
    </style>


    <!-- OTHER -->
    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?colorOnSurface</item>
    </style>

    <style name="actionModeCloseButtonStyle" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:tint">?colorOnSurface</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
