<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MediaPlayerTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="colorPrimary">@color/dark_colorAccent</item>
        <item name="colorSecondary">@color/dark_colorAccent</item>
        <item name="colorSecondaryVariant">@color/dark_contrast_icon</item>
        <item name="android:colorBackground">@color/dark_windowBackground</item>
        <item name="colorSurface">@color/dark_cardBackground</item>
        <item name="colorOnPrimary">@color/dark_contrast_icon</item>
        <item name="colorOnSecondary">@color/dark_contrast_icon</item>
        <item name="colorOnBackground">@color/dark_contrast_icon</item>
        <item name="colorOnSurface">@color/dark_contrast_icon</item>
        <item name="android:windowBackground">@color/dark_windowBackground</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <item name="android:textColorPrimary">@color/dark_textDefault</item>
        <item name="android:textColorPrimaryInverse">@color/dark_textDefault</item>
        <item name="android:textColorLink">@color/dark_textLink</item>

        <item name="textDefault">@color/dark_textDefault</item>
        <item name="textSecond">@color/dark_textSecond</item>

        <item name="bottomSheetDialogTheme">@style/DayNightAppTheme.BottomSheetDialog</item>
        <item name="alertDialogTheme">@style/DayNightAppTheme.Dialog</item>
    </style>

    <!-- Base application theme. -->
    <style name="DayNightAppTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="colorPrimary">@color/light_colorAccent</item>
        <item name="colorSecondary">@color/light_colorAccent</item>
        <item name="colorSecondaryVariant">@color/light_colorAccent</item>
        <item name="android:colorBackground">@color/light_windowBackground</item>
        <item name="colorSurface">@color/light_cardBackground</item>
        <item name="colorOnPrimary">@color/light_contrast_icon</item>
        <item name="colorOnSecondary">@color/light_contrast_icon</item>
        <item name="colorOnBackground">@color/light_base_icon</item>
        <item name="colorOnSurface">@color/light_base_icon</item>

        <item name="actionModeBackground">@color/light_colorPrimary</item>
        <item name="actionModeCloseButtonStyle">@style/actionModeCloseButtonStyle</item>
        <item name="actionOverflowButtonStyle">@style/OverFlow</item>
        <item name="alertDialogTheme">@style/DayNightAppTheme.Dialog</item>
        <item name="android:windowBackground">@color/light_windowBackground</item>

        <item name="android:textColorLink">@color/light_textLink</item>

        <item name="bottomSheetDialogTheme">@style/DayNightAppTheme.BottomSheetDialog</item>

        <!-- Attrs -->
        <item name="divider_line">@color/light_divider_line</item>
        <item name="btn_border">@color/light_btn_border</item>
        <item name="gradientBackground">@drawable/bg_google_pay_gradient_light</item>
        <item name="imageBackground">@color/light_imageBackground</item>

        <item name="episode_even">@color/light_episode_even</item>
        <item name="bg_fav_btn">@drawable/bg_btn_favorite_light</item>
        <item name="bg_release_remind">@drawable/bg_release_remind_light</item>
        <item name="bg_schedule_day">@drawable/bg_schedule_day_light</item>
        <item name="bgDonationIconPt">@drawable/bg_donation_icon_pt_light</item>
        <item name="bgDonationIconBt">@drawable/bg_donation_icon_bt_light</item>
        <item name="bgDonationIconYm">@drawable/bg_donation_icon_ym_light</item>
        <item name="bgDonationIconDa">@drawable/bg_donation_icon_da_light</item>

        <item name="textDefault">@color/light_textDefault</item>
        <item name="textSecond">@color/light_textSecond</item>

        <item name="app_bar_overlay">@style/DayNightAppTheme.AppBarOverlay</item>
        <item name="popup_overlay">@style/DayNightAppTheme.PopupOverlay</item>
    </style>


    <style name="DayNightAppTheme.NoActionBarBase" parent="DayNightAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DayNightAppTheme.NoActionBar" parent="DayNightAppTheme.NoActionBarBase" />

    <style name="BasePreferencesDayNightAppTheme" parent="DayNightAppTheme.NoActionBar">
        <item name="colorPrimary">@color/light_colorPrimary</item>
        <item name="colorPrimaryDark">@color/light_colorPrimaryDark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="PreferencesDayNightAppTheme" parent="BasePreferencesDayNightAppTheme" />

    <style name="BaseSplash.DayNightAppTheme" parent="DayNightAppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_light</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Splash.DayNightAppTheme" parent="BaseSplash.DayNightAppTheme" />

    <style name="DayNightAppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents">
        <item name="android:singleLine">true</item>
        <item name="colorPrimary">?colorSurface</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="DayNightAppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents">
        <item name="elevation">0dp</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="DayNightAppTheme.Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/light_colorAccent</item>
        <item name="colorSecondary">@color/light_colorAccent</item>
        <item name="colorSecondaryVariant">@color/light_colorAccent</item>
        <item name="android:colorBackground">@color/light_cardBackground</item>
        <item name="colorSurface">@color/light_cardBackground</item>
        <item name="colorOnPrimary">@color/light_contrast_icon</item>
        <item name="colorOnSecondary">@color/light_contrast_icon</item>
        <item name="colorOnBackground">@color/light_base_icon</item>
        <item name="colorOnSurface">@color/light_base_icon</item>

        <item name="dialogCornerRadius">8dp</item>
    </style>

    <style name="DayNightAppTheme.BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/light_colorAccent</item>
        <item name="colorSecondary">@color/light_colorAccent</item>
        <item name="colorSecondaryVariant">@color/light_colorAccent</item>
        <item name="android:colorBackground">@color/light_cardBackground</item>
        <item name="colorSurface">@color/light_cardBackground</item>
        <item name="colorOnPrimary">@color/light_contrast_icon</item>
        <item name="colorOnSecondary">@color/light_contrast_icon</item>
        <item name="colorOnBackground">@color/light_base_icon</item>
        <item name="colorOnSurface">@color/light_base_icon</item>

        <item name="bottomSheetStyle">@style/DayNightAppTheme.BottomSheet</item>
    </style>

    <style name="DayNightAppTheme.BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearanceBottomSheetDialog_Rounded</item>
    </style>

    <!-- OTHER -->
    <style name="OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?colorOnSurface</item>
    </style>

    <style name="actionModeCloseButtonStyle" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:tint">?colorOnSurface</item>
    </style>

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ShapeAppearanceBottomSheetDialog_Rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="YooMoneyThemeOverlay">
        <item name="colorPrimary">@color/brand_yoomoney</item>
        <item name="colorSecondary">@color/brand_yoomoney</item>
    </style>

    <style name="ShapeAppearance.Avatar" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
